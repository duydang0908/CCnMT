@model Project.SACH

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div>
    <h1>Chi tiết sách</h1>
    <hr />
    <p style="text-align:justify"><span style="font-weight:bold;color:navy">Tên sách : </span>@Model.Tensach</p>
    <br />
    <p style="text-align:justify"><span style="font-weight:bold;color:navy">Mô tả : </span>@Model.Mota</p>
    <br />
    <img src="~/images/@Model.Hinhminhhoa" />
