@model IEnumerable<Project.BaoCaoMuonSach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Báo cáo mượn sách</h2>

<table class="table" border="1">
    <tr>
        <th>
            Số lượt mượn
        </th>
        <th>
            Tên chủ đề
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuotMuon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CHUDE.TenCD)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.MaBaoCaoMuonSach })
        </td>
    </tr>
}

</table>
